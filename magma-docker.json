{
    "variables": {
        "org_name": "lavabit",
        "box_name": "magma",
        "box_base": "centos",
        "box_version": "{{env `VERSION`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos6/base.sh",
                "scripts/centos6/magma.sh",
                "scripts/centos6/cleanup.sh",
                "scripts/centos6/dockerize.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": ["magma-docker", "magma-centos6-docker"]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/base.sh",
                "scripts/centos7/magma.sh",
                "scripts/centos7/cleanup.sh",
                "scripts/centos7/dockerize.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": ["magma-centos7-docker"]
      },
      {
            "type": "file",
            "direction": "download",
            "source": "/tmp/magma-docker.tar",
            "destination": "{{build_name}}-{{user `box_version`}}.tar"
      }
    ],
    "builders": [
        {
            "type": "qemu",
            "name": "magma-docker",
            "vm_name": "{{user `box_name`}}-docker",
            "output_directory": "{{user `box_name`}}-docker-output",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "http_directory": "kickstart",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
            "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'locked' | sudo -S shutdown -P now"
        },
        {
            "type": "qemu",
            "name": "magma-centos6-docker",
            "vm_name": "{{user `box_name`}}-centos6-docker",
            "output_directory": "{{user `box_name`}}-centos6-docker-output",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "http_directory": "kickstart",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
            "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'locked' | sudo -S shutdown -P now"
        },
        {
            "type": "qemu",
            "name": "magma-centos7-docker",
            "vm_name": "{{user `box_name`}}-centos7-docker",
            "output_directory": "{{user `box_name`}}-centos7-docker-output",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "vm_name": "{{user `box_name`}}-docker",
            "http_directory": "kickstart",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
            "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'locked' | sudo -S shutdown -P now"
        }
    ],
    "post-processors": [
        [
            {
                "type": "artifice",
                "keep_input_artifact": true,
                "files": ["{{build_name}}-{{user `box_version`}}.tar"]
            },
            {
                "type": "compress",
                "compression_level": 9,
                "keep_input_artifact": true,
                "output": "{{build_name}}-{{user `box_version`}}.tar.gz"
            }
        ]
    ]
}
