{
    "variables": {
        "box_version": "{{env `VERSION`}}",
        "docker-user": "{{env `DOCKER_USER`}}",
        "docker-password": "{{env `DOCKER_PASSWORD`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos6/fixdns.sh",
                "scripts/centos6/base.sh",
                "scripts/centos6/reboot.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": [
                "magma-docker",
                "magma-centos-docker",
                "magma-centos6-docker"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos6/kernel.sh",
                "scripts/centos6/postfix.sh",
                "scripts/centos6/magma.sh",
                "scripts/centos6/cleanup.sh",
                "scripts/centos6/dockerize.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "pause_before": "120s",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": [
                "magma-docker",
                "magma-centos-docker",
                "magma-centos6-docker"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/fixdns.sh",
                "scripts/centos7/yum.sh",
                "scripts/centos7/base.sh",
                "scripts/centos7/reboot.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": [
                "magma-centos7-docker"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/kernel.sh",
                "scripts/centos7/postfix.sh",
                "scripts/centos7/magma.sh",
                "scripts/centos7/cleanup.sh",
                "scripts/centos7/unyum.sh",
                "scripts/centos6/dockerize.sh"
            ],
            "execute_command": "echo 'locked' | sudo -S bash '{{.Path}}'",
            "pause_before": "120s",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true",
            "only": [
                "magma-centos7-docker"
            ]
        },
        {
            "type": "file",
            "direction": "download",
            "source": "/tmp/magma-docker.tar",
            "destination": "output/{{build_name}}-{{user `box_version`}}.tar"
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "name": "magma-docker",
            "vm_name": "magma-docker",
            "output_directory": "output/magma-docker",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio-scsi",
            "disk_compression": true,
            "disk_discard": "unmap",
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=4,sockets=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.edge.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "3600s",
            "shutdown_command": "shutdown -h now"
        },
        {
            "type": "qemu",
            "name": "magma-centos-docker",
            "vm_name": "magma-centos-docker",
            "output_directory": "output/magma-centos-docker",
