                ],
                [
                    "-smp",
                    "cpus=4,sockets=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.edge.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
            "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "3600s",
            "shutdown_command": "shutdown -h now"
        }
    ],
    "post-processors": [
        [
            {
                "type": "artifice",
                "keep_input_artifact": false,
                "files": [
                    "output/{{build_name}}-{{user `box_version`}}.tar"
                ]
            },
            {
                "type": "compress",
                "compression_level": 9,
                "keep_input_artifact": false,
                "output": "output/{{build_name}}-{{user `box_version`}}.tar.gz"
            },
            {
                "type": "artifice",
                "keep_input_artifact": true,
                "files": [
                    "output/{{build_name}}-{{user `box_version`}}.tar.gz"
                ]
            },
            {
                "type": "checksum",
                "checksum_types": [
                    "sha256"
                ],
                "output": "output/{{build_name}}-{{user `box_version`}}.tar.gz.sha256",
                "keep_input_artifact": true
            }
        ],
        [
            {
                "type": "artifice",
                "keep_input_artifact": true,
                "files": [
                    "output/{{build_name}}-{{user `box_version`}}.tar.gz"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "{{user `box_version`}}",
                "repository": "lavabit/magma",
                "only": [
                    "magma-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "{{user `box_version`}}",
                "repository": "lavabit/magma-centos",
                "only": [
                    "magma-centos-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "{{user `box_version`}}",
                "repository": "lavabit/magma-centos6",
                "only": [
                    "magma-centos6-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "{{user `box_version`}}",
                "repository": "lavabit/magma-centos7",
                "only": [
                    "magma-centos7-docker"
                ]
            },
            {
                "type": "docker-push",
                "login": "false",
                "login_username": "{{user `docker_username`}}",
                "login_password": "{{user `docker_password`}}"
            }
        ],
        [
            {
                "type": "artifice",
                "keep_input_artifact": true,
                "files": [
                    "output/{{build_name}}-{{user `box_version`}}.tar.gz"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "latest",
                "repository": "lavabit/magma",
                "only": [
                    "magma-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "latest",
                "repository": "lavabit/magma-centos",
                "only": [
                    "magma-centos-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "latest",
                "repository": "lavabit/magma-centos6",
                "only": [
                    "magma-centos6-docker"
                ]
            },
            {
                "type": "docker-import",
                "keep_input_artifact": true,
                "tag": "latest",
                "repository": "lavabit/magma-centos7",
                "only": [
                    "magma-centos7-docker"
                ]
            },
            {
                "type": "docker-push",
                "login": "false",
                "login_username": "{{user `docker_username`}}",
                "login_password": "{{user `docker_password`}}"
            }
        ]
    ]
}
