            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio-scsi",
            "disk_compression": true,
            "disk_discard": "unmap",
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=4,sockets=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.edge.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "3600s",
            "shutdown_command": "shutdown -h now"
        },
        {
            "type": "qemu",
            "name": "magma-centos6-docker",
            "vm_name": "magma-centos6-docker",
            "output_directory": "output/magma-centos6-docker",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.docker.ks<enter><wait>"
            ],
            "format": "raw",
            "disk_size": 32770,
            "disk_interface": "virtio-scsi",
            "disk_compression": true,
            "disk_discard": "unmap",
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=4,sockets=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.edge.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "locked",
            "ssh_port": 22,
            "ssh_wait_timeout": "3600s",
            "shutdown_command": "shutdown -h now"
        },
        {
            "type": "qemu",
            "name": "magma-centos7-docker",
            "vm_name": "magma-centos7-docker",
