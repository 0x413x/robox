{
    "variables": {
        "org_name": "lavabit",
        "box_name": "magma",
        "box_base": "centos7",
        "box_version": "{{env `VERSION`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/yum.sh",
                "scripts/centos7/base.sh",
                "scripts/centos7/reboot.sh"
            ],
            "execute_command": "echo 'vagrant' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true"
        }, {
            "type": "shell",
            "scripts": [
                "scripts/centos7/kernel.sh",
                "scripts/centos7/virtualbox.sh",
                "scripts/centos7/vmware.sh",
                "scripts/centos7/qemu.sh",
                "scripts/centos7/vagrant.sh",
                "scripts/centos7/magma.sh",
                "scripts/centos7/tuning.sh",
                "scripts/centos7/sshd.sh",
                "scripts/centos7/cleanup.sh",
                "scripts/centos7/unyum.sh",
                "scripts/centos7/zerodisk.sh",
                "scripts/centos7/lockout.sh"
            ],
            "execute_command": "echo 'vagrant' | sudo -S bash '{{.Path}}'",
            "pause_before": "120s",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true"
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "name": "magma-centos7-libvirt",
            "vm_name": "magma-centos7-libvirt",
            "output_directory": "output/magma-centos7-libvirt",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.vagrant.ks<enter><wait>"
            ],
            "format": "qcow2",
            "disk_size": 32768,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
            "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
        },
        {
            "type": "virtualbox-iso",
            "name": "magma-centos7-virtualbox",
            "vm_name": "magma-centos7-virtualbox",
            "output_directory": "output/magma-centos7-virtualbox",
            "boot_wait": "20s",
            "boot_command": [
                "<tab>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.vagrant.ks<enter><wait>"
            ],
            "disk_size": 32768,
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ]
            ],
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
            "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.0.30/VBoxGuestAdditions_5.0.30.iso",
            "guest_additions_sha256": "096cf810de3d951c60c857e0b8cf534dd1237d0a09759ab696e8a2c579df75fd",
            "guest_additions_path": "VBoxGuestAdditions.iso",
            "virtualbox_version_file": "VBoxVersion.txt"
        },
        {
            "type": "vmware-iso",
            "name": "magma-centos7-vmware",
            "vm_name": "magma-centos7-vmware",
            "vmdk_name": "magma-centos7-vmware",
            "output_directory": "output/magma-centos7-vmware",
            "boot_wait": "20s",
            "boot_command": [
                "<tab>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.vagrant.ks<enter><wait>"
            ],
            "disk_size": 32768,
            "disk_type_id": "0",
            "vmx_data": {
                "memsize": "2048",
                "numvcpus": "2",
                "cpuid.coresPerSocket": "1"
            },
            "guest_os_type": "centos-64",
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
            "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
            "iso_checksum_type": "sha256",
            "skip_compaction": false,
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "tools_upload_flavor": "linux"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": 9,
                "keep_input_artifact": false,
                "vagrantfile_template": "tpl/vagrantfile.tpl",
                "output": "output/{{build_name}}-{{user `box_version`}}.box"
            },
            {
                "type": "atlas",
                "only": ["magma-centos7-libvirt"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "libvirt",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": ["magma-centos7-virtualbox"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "virtualbox",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": ["magma-centos7-vmware"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "vmware_desktop",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
              "type": "artifice",
              "keep_input_artifact": true,
              "files": ["output/{{build_name}}-{{user `box_version`}}.box"]
            },
            {
                "type": "checksum",
                "checksum_types": ["sha256"],
                "output": "output/{{build_name}}-{{user `box_version`}}.box.sha256",
                "keep_input_artifact": true
            }
        ]
    ]
}
