{
    "variables": {
        "org_name": "lavabit",
        "box_name": "magma",
        "box_base": "centos7",
        "box_version": "0.2.1"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/base.sh",
                "scripts/centos7/reboot.sh",
                "scripts/centos7/kernel.sh",
                "scripts/centos7/virtualbox.sh",
                "scripts/centos7/vmware.sh",
                "scripts/centos7/qemu.sh",
                "scripts/centos7/vagrant.sh",
                "scripts/centos7/magma.sh",
                "scripts/centos7/tuning.sh",
                "scripts/centos7/sshd.sh",
                "scripts/centos7/cleanup.sh",
                "scripts/centos7/zerodisk.sh",
                "scripts/centos7/lockout.sh"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "vmware-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "qemu": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            },
            "start_retry_timeout": "15m"
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.kickstart.cfg<enter><wait>"
            ],
            "format": "qcow2",
            "disk_size": 20480,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "http_directory": "kickstart",
            "output_directory": "{{user `box_name`}}-{{user `box_base`}}-libvirt-output",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
            "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
        },
        {
            "type": "virtualbox-iso",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.kickstart.cfg<enter><wait>"
            ],
            "disk_size": 20480,
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ]
            ],
            "guest_os_type": "RedHat_64",
            "http_directory": "kickstart",
            "output_directory": "{{user `box_name`}}-{{user `box_base`}}-virtualbox-output",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
            "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version"
        },
        {
            "type": "vmware-iso",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos7.kickstart.cfg<enter><wait>"
            ],
            "disk_size": 20480,
            "disk_type_id": "0",
            "vmx_data": {
                "memsize": "2048",
                "numvcpus": "2",
                "cpuid.coresPerSocket": "1"
            },
            "guest_os_type": "Centos-64",
            "http_directory": "kickstart",
            "output_directory": "{{user `box_name`}}-{{user `box_base`}}-vmware-output",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
            "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
            "iso_checksum_type": "sha256",
            "skip_compaction": false,
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "tools_upload_flavor": "linux"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": 9,
                "keep_input_artifact": false,
                "vagrantfile_template": "tpl/vagrantfile.tpl",
                "override": {
                    "libvirt": {
                        "output": "{{user `box_name`}}-{{user `box_base`}}-libvirt-{{user `box_version`}}.box"
                    },
                    "virtualbox": {
                        "output": "{{user `box_name`}}-{{user `box_base`}}-virtualbox-{{user `box_version`}}.box"
                    },
                    "vmware": {
                        "output": "{{user `box_name`}}-{{user `box_base`}}-vmware-{{user `box_version`}}.box"
                    }
                }
            },
            {
                "type": "atlas",
                "only": [
                    "qemu"
                ],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "libvirt",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": [
                    "vmware-iso"
                ],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "vmware_desktop",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": [
                    "virtualbox-iso"
                ],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}-{{user `box_base`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "virtualbox",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            }
        ]
    ]
}
