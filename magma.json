{
    "variables": {
        "org_name": "lavabit",
        "box_name": "magma",
        "box_version": "{{env `VERSION`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7/fixdns.sh",
                "scripts/centos6/base.sh",
                "scripts/centos6/reboot.sh"
            ],
            "execute_command": "echo 'vagrant' | sudo -S bash '{{.Path}}'",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos6/kernel.sh",
                "scripts/centos6/virtualbox.sh",
                "scripts/centos6/vmware.sh",
                "scripts/centos6/qemu.sh",
                "scripts/centos6/vagrant.sh",
                "scripts/centos6/magma.sh",
                "scripts/centos6/tuning.sh",
                "scripts/centos6/sshd.sh",
                "scripts/centos6/cleanup.sh",
                "scripts/centos6/zerodisk.sh",
                "scripts/centos6/lockout.sh"
            ],
            "execute_command": "echo 'vagrant' | sudo -S bash '{{.Path}}'",
            "pause_before": "120s",
            "start_retry_timeout": "15m",
            "expect_disconnect": "true"
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "name": "magma-libvirt",
            "vm_name": "magma-libvirt",
            "output_directory": "output/magma-libvirt",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.vagrant.ks<enter><wait>"
            ],
            "format": "qcow2",
            "disk_size": 32768,
            "disk_interface": "virtio",
            "disk_compression": true,
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
        },
        {
            "type": "virtualbox-iso",
            "name": "magma-virtualbox",
            "vm_name": "magma-virtualbox",
            "output_directory": "output/magma-virtualbox",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.vagrant.ks<enter><wait>"
            ],
            "disk_size": 32768,
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ]
            ],
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.1.18/VBoxGuestAdditions_5.1.18.iso",
            "guest_additions_sha256": "f2951b49f48a560fbc1afe9d135d1f3f82a3e158b9002278d05d978428adca8a",
            "guest_additions_path": "VBoxGuestAdditions.iso",
            "virtualbox_version_file": "VBoxVersion.txt"
        },
        {
            "type": "vmware-iso",
            "name": "magma-vmware",
            "vm_name": "magma-vmware",
            "vmdk_name": "magma-vmware",
            "output_directory": "output/magma-vmware",
            "boot_wait": "20s",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/magma.centos6.vagrant.ks<enter><wait>"
            ],
            "disk_size": 32768,
            "disk_type_id": "0",
            "vmx_data": {
                "memsize": "2048",
                "numvcpus": "2",
                "cpuid.coresPerSocket": "1"
            },
            "guest_os_type": "centos-64",
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/centos/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
            "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
            "iso_checksum_type": "sha256",
            "skip_compaction": false,
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "tools_upload_flavor": "linux"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": 9,
                "keep_input_artifact": false,
                "vagrantfile_template": "tpl/vagrantfile.tpl",
                "output": "output/{{build_name}}-{{user `box_version`}}.box"
            },
            {
                "type": "atlas",
                "only": ["magma-libvirt"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "libvirt",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": ["magma-virtualbox"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "virtualbox",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
                "type": "atlas",
                "only": ["magma-vmware"],
                "artifact": "{{user `org_name`}}/{{user `box_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "vmware_desktop",
                    "version": "{{user `box_version`}}",
                    "created_at": "{{timestamp}}",
                    "description": "The magma encrypted mail daemon build environment."
                }
            },
            {
              "type": "artifice",
              "keep_input_artifact": true,
              "files": ["output/{{build_name}}-{{user `box_version`}}.box"]
            },
            {
                "type": "checksum",
                "checksum_types": ["sha256"],
                "output": "output/{{build_name}}-{{user `box_version`}}.box.sha256",
                "keep_input_artifact": true
            }
        ]
    ]
}
